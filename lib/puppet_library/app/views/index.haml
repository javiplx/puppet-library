%h1 Modules
.loading
  Loading module list...
%ul.modules

:javascript
  $(document).ready(function() {
    var source = "v3/modules#{ query.nil? ? '' : '?query=' + query }";
    $.getJSON(source, function(modules) {
      $.each(modules.results, function(index, module) {
        var item = $("<li/>");
        item.append($("<b/>").append($("<a/>").attr("href", "modules/" + module.name).text(module.name)));

        var versionList = $("<ul/>");
        $.each(module.releases, function(index, release) {
            versionList.append($("<li>").text(release.version));
        });

        item.append(versionList);
        item.appendTo(".modules");
      });
      $(".loading").hide();
    });
  });
